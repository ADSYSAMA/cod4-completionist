{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Your profile</h1>

    <h2>Challenges progression</h2>
    <div class="row gy-4">
        {% for challengeCategoryName,challenge in challenges %}
            <div class="col-12">
                <h3 class="text-end">{{ challengeCategoryName }}</h3>
                {% set percentage = ((challenge.completed / challenge.total) * 100)|round %}
                <div class="progress" role="progressbar"
                     aria-label="Animated striped example"
                     aria-valuenow="{{ percentage }}"
                     aria-valuemin="0"
                     aria-valuemax="100">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: {{ percentage }}%">
                        {{ percentage }}%
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
